#include "main.h"

// Implementaciones de las funciones y variables globales
void buttonPressed() {
    BSP_LED_On(LED1);
}

void buttonReleased() {
    BSP_LED_Off(LED1);
}

int main() {
    HAL_Init();
    SystemClock_Config();
    BSP_LED_Init(LED1);
    BSP_PB_Init(BUTTON_USER, BUTTON_MODE_GPIO);

    debounceFSM_init();

    while (1) {
        debounceFSM_update();

        if (readKey()) {
            if (BSP_LED_GetState(LED1)) {
                BSP_LED_Toggle(LED1);
                delay_start(500);
            } else {
                BSP_LED_Toggle(LED1);
                delay_start(100);
            }
        }
    }
}

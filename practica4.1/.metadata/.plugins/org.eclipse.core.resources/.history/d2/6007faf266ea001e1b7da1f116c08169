typedef enum {
  BUTTON_UP,
  BUTTON_FALLING,
  BUTTON_DOWN,
  BUTTON_RAISING
} debounceState_t;

typedef enum {
  RELEASED,
  PRESSED
} buttonState_t;

void debounceFSM_init(debounceState_t* debounceState, buttonState_t* buttonState, bool_t* buttonPressed);
void debounceFSM_update(debounceState_t* debounceState, buttonState_t* buttonState, bool_t* buttonPressed);
bool_t readKey(bool_t* buttonPressed);

